@page
@model HomeAutomation.Pages.Budgets.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Budget</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.RegisterBudget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget.RegisterBudget)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.SumPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget.SumPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.Clients)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Whatsapp</th>
                </tr>
                @foreach (var item in Model.Budget.Clients)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Whatsapp)
                        </td>
                    </tr>
                }
            </table>
        </dd>        
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Budget?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
